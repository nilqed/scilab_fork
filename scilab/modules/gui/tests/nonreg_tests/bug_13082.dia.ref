// Datatip mark style was not inherited from polyline.
clf();
plot(1:1000);
e = gce();
p = e.children;
datatipSetStyle(p,2);
d1 = datatipCreate(p,400);
assert_checkequal(d1.mark_style, 7);
datatipSetStyle(p,1)
assert_checkequal(d1.mark_style, 11);
d2 = datatipCreate(p,600)
